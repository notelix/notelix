{
  "name": "notelix",
  "version": "0.1.3",
  "description": "",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Options",
    "default_popup": "extension-options.html"
  },
  "background": {
    "scripts": [
      "/dist/background.dist.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*/*.txt"
      ],
      "js": [
        "/dist/content-script.dist.js"
      ],
      "run_at": "document_end"
    }
  ]
}
